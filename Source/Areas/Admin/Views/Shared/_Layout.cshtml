<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewBag.Action</title>
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.5/dist/umd/popper.min.js"
            integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
            crossorigin="anonymous"></script>
</head>
<body>
    <div class="wrapper-vertical">
        <header class="header container-fluid border-bottom justify-content-between mb-5">
            <div class="container-xl">
                <div class="row">
                    <div class="col">
                        <h5 class="mb-0">@ViewBag.Title</h5>
                    </div>
                    <span class="col-auto">
                        <partial name="_AdminMenuPartial" />
                    </span>
                </div>
            </div>
        </header>
        <main class="container-xl">
            @RenderBody()
        </main>
        <footer class="container-xl text-secondary mb-3 mt-3">
            Project metro navigator - 2022 © Belov Daniil
        </footer>
    </div>
</body>
@RenderSection("Scripts", required: false)
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
<script src="js/admin.js"></script>
</html>